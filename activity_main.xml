<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.sts.jsondemosend.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#237b8d"
        android:padding="5dp"
        android:id="@+id/first_name_editext"
        android:hint="Enter First"
        android:textColorHint="#ffffff"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#237b8d"
        android:padding="5dp"
        android:id="@+id/last_name_editext"
        android:hint="Enter Last"
        android:textColorHint="#ffffff"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#237b8d"
        android:padding="5dp"
        android:id="@+id/email_editext"
        android:hint="Enter Email"
        android:textColorHint="#ffffff"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#237b8d"
        android:padding="5dp"
        android:id="@+id/password_editext"
        android:hint="Enter Password"
        android:textColorHint="#ffffff"
        />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#237b8d"
        android:padding="5dp"
        android:id="@+id/mobile_editext"
        android:hint="Enter Mobile"
        android:textColorHint="#ffffff"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:id="@+id/register_button"
        />


</LinearLayout>
